s16 sinl(float angle)
{
	//cast to int
	s32 angler=angle*100;
	
	//Shifts the angle to be in range of the array
	while (angler>627)
	{
		angler=angler-628;
	}
	while (angler<0)
	{
		angler=angler+628;
	}
	
	//returns sine waveform in range 2048 to -2048 as a function of an angle in radians
	return sinwave[angler];
}

s16 cosl(float angle)
{
	//cast to int
	s32 angler=angle*100;
	
	//Shifts the angle to be in range of the array
	while (angler>627)
	{
		angler=angler-628;
	}
	while (angler<0)
	{
		angler=angler+628;
	}

	//returns sine waveform shifted 90deg in range 2048 to -2048 as a function of an angle in radians
	return sinwave[angler+157];
}
